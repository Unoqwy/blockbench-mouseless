{
    "tabWidth": 4,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "printWidth": 120,
    "quoteProps": "consistent",
    "overrides": [
        {
            "files": "*.{json,yml}",
            "options": {
                "printWidth": 80
            }
        },
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.md",
            "options": {
                "printWidth": 100,
                "tabWidth": 1,
                "embeddedLanguageFormatting": "off"
            }
        }
    ]
}
